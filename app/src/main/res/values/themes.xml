<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BreakingBad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryVariant">@color/app_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.BreakingBad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BreakingBad.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BreakingBad.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppearanceDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextHeading" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

</resources>